(rule
 (deps %{project_root}/staged_dist/slipshow.cdn.min.js)
 (target "slipshow.cdn.min.js.crunch")
 (enabled_if
  (= %{profile} "with-bundle"))
 (mode promote)
 (action
  (copy %{deps} %{target})))

