(rule
 (target highlight-js.css.crunch)
 (enabled_if
  (= %{profile} "with-bundle"))
 (mode promote)
 (action
  (run
   wget
   --output-document
   highlight-js.css.crunch
   https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/default.min.css)))

